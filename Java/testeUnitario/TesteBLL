	            Erro.setErro("Dado2 deve ser preenchido");
	            return;
	        }
	        if (StringUtils.isBlank(dado.getDado3())) {
	            Erro.setErro("Dado3 deve ser preenchido");
	            return;
	        }
	        if (StringUtils.isBlank(dado.getDado4())) {
	            Erro.setErro("Dado4 deve ser preenchido");
	            return;
	        }
        }
//        try {
