//        }
//        catch (Exception e) {
//            Erro.setErro("Dado3 deve ser do tipo float");
//        }
//        try {
//            if (Integer.parseInt(dado.getDado2()) < 0) {
//                Erro.setErro("Dado3 deve ser do tipo int");
//                return;
//            }
