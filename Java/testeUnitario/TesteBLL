import org.apache.commons.lang.StringUtils;

public class TesteBLL {
	
    public static void ValidaDados(Dados dado) {
        Erro.setErro(false);
        if(dado != null) {
	        if (StringUtils.isBlank(dado.getDado1())) {
	            Erro.setErro("Dado1 deve ser preenchido");
	            return;
	        }
